<%= form_with(model: store) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
        <% store.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
   <%= form.label :header_image %>
   <%= image_tag(@store.header_image_blob, width:'10%') if @store.header_image.present?  %><br/>
   <%= form.file_field :header_image %>
 </div>
 
 <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
   <%= form.label :files %>
   <%= form.file_field :files, multiple: true %>
 </div>
 
  <strong>Attachments:</strong>
    <% @store.files.each do |file| %>
    <%= image_tag file, width:"250px" %>
    <% end %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
